{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "lib": ["DOM", "ES6"],
    "baseUrl": "./",
    "paths": {
      "~/*": ["src/controllers/*"]
    },
     "types": ["vite/client"]
  },
  "include": ["src/controllers"],
  "exclude": ["node_modules", "dist"]
}

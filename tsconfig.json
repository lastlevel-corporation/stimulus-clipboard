{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "lib": ["DOM", "ESNext"],
    "baseUrl": "./",
    "paths": {
      "~/*": ["src/controllers/*"]
    }
  },
  "include": ["src/controllers"],
  "exclude": ["node_modules", "dist"]
}
